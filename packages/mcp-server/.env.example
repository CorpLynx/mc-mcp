# Minecraft MCP Server - Environment Configuration
# Copy this file to .env and configure with your values

# ============================================================================
# Bridge Server Connection
# ============================================================================

# WebSocket URL of the Bridge Server
# The MCP Server connects to this server to send commands and receive events
# Format: ws://hostname:port or wss://hostname:port (for TLS)
BRIDGE_URL=ws://localhost:8080

# Authentication token for connecting to the Bridge Server
# Must match one of the tokens in MCP_AUTH_TOKENS on the Bridge Server
# Use a strong, randomly generated token in production
AUTH_TOKEN=your-secure-mcp-token-here

# ============================================================================
# Connection Resilience
# ============================================================================

# Maximum number of reconnection attempts if connection is lost
# Set to 0 to disable automatic reconnection
# Default: 5
RECONNECT_ATTEMPTS=5

# Initial delay between reconnection attempts in milliseconds
# Uses exponential backoff: 1x, 2x, 4x, 8x, 16x this value
# Default: 1000 (1 second)
RECONNECT_DELAY=1000

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level for the MCP Server
# Options: TRACE, DEBUG, INFO, WARN, ERROR
# - TRACE: Very detailed logging (use for debugging only)
# - DEBUG: Detailed logging including message contents
# - INFO: General information about operations (recommended)
# - WARN: Warning messages about potential issues
# - ERROR: Only error messages
# Default: INFO
LOG_LEVEL=INFO

# ============================================================================
# MCP Protocol Configuration
# ============================================================================

# Server name exposed to MCP clients
# Default: minecraft-mcp-server
MCP_SERVER_NAME=minecraft-mcp-server

# Server version exposed to MCP clients
# Default: 1.0.0
MCP_SERVER_VERSION=1.0.0

# ============================================================================
# Performance Tuning (Optional)
# ============================================================================

# Timeout for command execution in milliseconds
# Commands that take longer than this will return a timeout error
# Default: 30000 (30 seconds)
# COMMAND_TIMEOUT=30000

# Maximum number of concurrent command executions
# Helps prevent resource exhaustion
# Default: 10
# MAX_CONCURRENT_COMMANDS=10

# ============================================================================
# Development/Debug Settings (Optional)
# ============================================================================

# Enable verbose message logging (logs all message payloads)
# WARNING: May expose sensitive data in logs
# Default: false
# VERBOSE_LOGGING=false

# Enable MCP protocol debugging
# Logs all MCP protocol messages
# Default: false
# MCP_DEBUG=false
